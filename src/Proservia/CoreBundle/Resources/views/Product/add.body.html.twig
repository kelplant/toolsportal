<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" id="modalAdd">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{ path('form_exec_add_product') }}" method="post" class="form-horizontal">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title font_exo_2" id="myModalLabel">Ajout d'une Entité</h4>
                </div>
                <div class="modal-body">
                    <div class="main_container">
                        <input type="hidden" name="formAction" value="add">
                        {{ form_errors(formAdd) }}
                        <div class="form-group">
                            {{ form_label(formAdd.name) }}
                            {{ form_errors(formAdd.name) }}
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                    {{ form_widget(formAdd.name) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.category) }}
                            {{ form_errors(formAdd.category) }}
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                    {{ form_widget(formAdd.category) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.offer) }}
                            {{ form_errors(formAdd.offer) }}
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                    {{ form_widget(formAdd.offer) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.dispatch) }}
                            {{ form_errors(formAdd.dispatch) }}
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                    {{ form_widget(formAdd.dispatch) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_label(formAdd.description) }}
                            {{ form_errors(formAdd.description) }}
                            <div class="col-sm-8">
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-home fa" aria-hidden="true"></i></span>
                                    {{ form_widget(formAdd.description) }}
                                </div>
                            </div>
                        </div>
                            {#{{ form_row(formAdd.id) }}#}
                        {{ form_rest(formAdd) }}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-warning" data-dismiss="modal">Fermer</button>
                    <button type="button" class="btn btn-success" onclick="submit();">Créer</button>
                </div>
            </form>
        </div>
    </div>
</div>