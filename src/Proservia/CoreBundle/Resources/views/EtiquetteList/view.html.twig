{% extends 'AppBundle:Default:items.view.html.twig' %}
    {% block title %} Liste des Assets SCOPE GP {% endblock %}
    {% block title2 %} Odigo {% endblock %}
    {% block title3 %} Liste des Assets SCOPE GP {% endblock %}
    {% block breadcrumb %} Liste des Assets SCOPE GP {% endblock %}
    {% block corps_table_title %}
        <th class="admin_cat_table_title">DSP</th>
        <th class="admin_cat_table_title">Serial</th>
        <th class="admin_cat_table_title">Modèle</th>
    {% endblock %}
    {% block corps_table_cells %}
        {% for item in all %}
            <tr id="generalBtr" data-href="">
                <td class="admin_cat_table_cell">{{ item.name }}</td>
                <td class="admin_cat_table_cell">{{ item.serial }}</td>
                <td class="admin_cat_table_cell">{{ item.product }}</td>
                <td class="admin_cat_table_cell_action">
                    <button type="button" class="btn btn-default btn-xs" aria-label="Left Align" title="Editer {{ alert_text }}" onclick="ajaxCoreEdit('{{ entity }}', this.name);" data-toggle="modal" data-target="#modalEdit" id="editForm" name="{{ item.id }}">
                        <span class="glyphicon glyphicon-edit  btn-xs" aria-hidden="true"></span>
                    </button>
                    <a href="{{ path( remove_path , { 'itemDelete': item.id}) }}" title="Supprimer {{ alert_text }}" data-confirm="Etes-vous certain de vouloir supprimer {{ alert_text }} ?">
                        <button type="button" class="btn btn-default  btn-xs" aria-label="Left Align">
                            <span class="glyphicon glyphicon-remove  btn-xs" aria-hidden="true"></span>
                        </button>
                    </a>
                </td>
            </tr>
        {% endfor %}
    {% endblock %}

    {% block modal_form %}

        {% embed "@ProserviaCore/EtiquetteList/add.body.html.twig"  %}
        {% endembed %}

        {% embed "@ProserviaCore/EtiquetteList/addViaFile.body.html.twig"  %}
        {% endembed %}

        {% embed "@ProserviaCore/EtiquetteList/edit.body.html.twig"  %}
        {% endembed %}

    {% endblock %}

 {% block javascripts %}
     <script src="{{ asset('js/select2/select2.full.js') }}"></script>
     <script src="{{ asset('js/select2/i18n/fr.js') }}"></script>
     <script>
         $('.orange_tel_liste_numero').keyup(function() {
             var val = this.value.replace(/\D/g, '');
             var newVal = '';
             while (val.length > 2) {
                 newVal += val.substr(0, 2) + ' ';
                 val = val.substr(2);
             }
             newVal += val;
             this.value = newVal;
         });
     </script>
     <script>
         $('.select2-single').select2({
             theme: "bootstrap",
             width: null,
             containerCssClass: ':all:'
         });
     </script>

     <script>
         $(document).ready(function(){
             $('#bootstrap-todo').DataTable({
                 "dom": '<".todofilter"><"top"p>rt<"bottom"p><"clear">',
                 "order": [[ 0, "desc" ]],
                 bFilter: true,
                 bInfo: false,
                 bLengthChange:false,
                 "pageLength": 13,
                 "language": {
                     "paginate": {
                         "previous": "Préc.",
                         "next": "Suiv."
                     },
                     "zeroRecords": "Pas de données à Afficher",
                     "search": ""
                 }
             });
             $('#global_filter').on( 'keyup click', function () {
                 filterGlobal();
             } );
         });
     </script>

 {% endblock %}